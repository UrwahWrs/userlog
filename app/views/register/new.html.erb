<%= render partial: "shared/navbar"%>

<%= form_with model: @blogger, url: register_path do |form|%>

    <% if @blogger.errors.any?%>
        <div class="alert alert-danger">
        <% @blogger.errors.full_messages.each do |message|%> 
            <div><%= message %></div>
        <% end %>
        </div>
    <% end %>

<section class="signup">

<div class="container">
<div class="signup-content">
    <div class="signup-form">
        <h2 class="form-title">Sign up</h2>
        
        <div class="form-group">
        <i class="zmdi zmdi-account material-icons-name"></i><i class="required-fields"> *required</i>
            <%= form.text_field :first_name, class: "form-control", id: "inputFirstName", type: "text", placeholder: "Enter your first name" , required: true %>
        </div>
            <div class="form-group">
            <i class="zmdi zmdi-account material-icons-name"></i><i class="required-fields"> *required</i>
            <%= form.text_field :last_name, class: "form-control", id: "inputFirstName", type: "text", placeholder: "Enter your last name", required: true  %>
        </div>
        <div class="form-group">
            <i class="zmdi zmdi-email"></i><i class="required-fields"> *required</i>
                <%=form.text_field :email, class: "form-control", id: "inputEmail", type:"email", placeholder: "name@example.com" , required: true %>
        </div>
        <div class="form-group">
                <i class="zmdi zmdi-lock"> </i><i class="required-fields"> *required</i>
                <%= form.password_field :password, class:"form-control", id:"inputPassword", type: "password", placeholder: "Create a password", required: true  %>
                <i class="required-fields"> (password must be 5 digits long)</i>
        </div>
        <div class="form-group">
            <i class="zmdi zmdi-lock-outline"></i><i class="required-fields"> *required</i>
            <%= form.password_field :password_confirmation, class:"form-control", id:"inputPasswordConfirm", type: "password", placeholder:"Confirm password", required: true  %>
        </div>
        <div class="form-group">
            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
            <label for= "agree-term" class= "label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a>
        </div>
        <div class="form-group form-button">
            <%= form.submit "Create Account", class:"form-submit"%>
            <%= link_to "Go Back", blogposts_path(:blogposts =>'all'), class:"form-submit"%>
        </div>
       
    </div>
    <div class="signup-image">
        <figure><%= image_tag "signup-image.jpg" %></figure>
        <a href="/userlogin" class="signup-image-link">I am already member</a>
            
    </div>
</div>
</div>
</section>

<%end%>                      
                       

