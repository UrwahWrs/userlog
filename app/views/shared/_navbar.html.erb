                <div class="row">
                    <div class="col-md-2">
                        <div class="logo">
                            <h2><a href="/">BLOGS</a></h2>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="menu">
                  
                            <ul>
                                <% if Current.blogger.nil?%>

                                <li> <%= link_to "Home", root_path, class: "active" %></li>
                                <%else%>
                                <li> <%= link_to "Home", blogposts_path, class: "active" %></li>

                                <%end%>
