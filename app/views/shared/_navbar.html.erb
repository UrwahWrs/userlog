                                 <%= render partial: "shared/search"%>
                                 <%end%>
                                </li>

                                <% if Current.blogger %>
                                  <li class="nav-item">
                                  
                                  <a class="btn" href="<%= resetpassword_path %>"> <i class="fa fa-user" aria-hidden="true" ></i></a>
                                
                                  <a class="LogoutButton"><%= button_to "logout", logout_path, method: :delete, class: "btn btn-info" %></a>
                                 
                                  </li>
                                  
                                <% else %>
                                  <li>
                                  <%= link_to "Sign Up", register_path%>  <%= link_to "Login", userlogin_path %>
