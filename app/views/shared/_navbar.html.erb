  <%= javascript_include_tag "application" %>

<body>

<div class="wrapper">
<header class="header">
<div class="container">
    <div class="row">
        <div class="col-md-1">

            <div class="logo">
            <h2><%= link_to "BLOGS", blogposts_path(:blogposts =>'all')%></h2>
            </div>

        </div>
        

        <div class="col-md-11">
            <div class="menu">
        
                <ul>
                    <% unless Current.blogger.nil?%>
                        <li>
                        <%= link_to "New Post",  new_blogpost_path %>
                        </li>
                    
                    <% end %>
                    
                    <li>                    
                        <%= render partial: "shared/search"%>                    
                    </li>

                    

                    <% unless Current.blogger.nil?%>
                    <li class="nav-item dropdown">
                    <div class="drop-b">
                        <div class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            POSTS 
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            
                            <li class="drop-item"><%= link_to "My All Posts : #{Current.blogger.blogposts.count}", blogposts_path(:blogposts =>'myposts'), class: "active" %></li>
                            <li class="drop-item"><%= link_to "Liked :  #{Current.blogger.favorites.count}", blogposts_path(:blogposts =>'liked'), class: "active" %></li>
                            <li class="drop-item"><%= link_to "Published  : #{Current.blogger.blogposts.where(status: "public").count}", blogposts_path(:blogposts =>'published'), class: "active" %></li>
                            <li class="drop-item"><%= link_to "Unpublished : #{Current.blogger.blogposts.where(status: "private").count}", blogposts_path(:blogposts =>'unpublished'), class: "active" %></li>
                        </ul>
                        </div>
                    </div>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" >
                            <i class="fa fa-user" aria-hidden="true" ></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li class="drop-item"><%=link_to Current.blogger.first_name+" "+Current.blogger.last_name, resetpassword_path, class: "active"%></li>
                            <li class="drop-item"><%= link_to "Reset-Password", resetpassword_path, class: "active" %></li>
                            
                            <li class="drop-item">
                            <div class="logout-b">
                            <%= button_to "Logout", logout_path, method: :delete, class:"btn btn-info" %>
                            </div>
                            </li>
                        </ul>
                        </div>
                    </li>
                        
                    <% else %>
                    
                        <li>
                        <%= link_to "Sign Up", register_path%>  <%= link_to "Login", userlogin_path %>
                    </li>
                
                
                
                        <% end %>
                    
                </ul>
            </div>
                
            
        </div>

        

    </div>
</div>
</header>