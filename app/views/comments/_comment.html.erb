<div class="commententries">

    <h3>Comments</h3>

    <ul class="commentlist">

    <li>
    <% @blogpost.comments.where(parent_id: nil).each do |comment| %>
    <article class="comment">
        <header class="comment-author">
            <i class="fa fa-user" aria-hidden="true" ></i> 
        </header>
        <section class="comment-details">
            <div class="author-name">
                <h5><a href="#"><%= Current.blogger.first_name%></a></h5>
                <p><%=comment.created_at%></p>
            </div>
            <div class="comment-body">
                <p><%= comment.body%></p>
            </div>
            <div class="reply">
                <p><%#= link_to 'reply', new_blogpost_comment_path(@blogpost, parent_id: comment.id), remote: true, class: 'd-block' %>
                </p>
            <div class="form-comment">

                
            </div>
            </div>
            
        </section>
    </article>
             <%= render partial: "comments/reply", locals: {comment: comment}%> 
    <%end%>
    </li>

    </ul>    
    

</div>