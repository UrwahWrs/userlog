<div class="commententries">

    <h3>Comments</h3>

    <ul class="commentlist">
        <li>
        <% @blogpost.comments.where(parent_id: nil).each do |comment| %>
            <article class="comment">
                <header class="comment-author">
                    <i class="fa fa-user" aria-hidden="true" ></i> 
                </header>
                <section class="comment-details">
                    <div class="author-name">
                        <h5><a href="#"><%= Current.blogger.first_name%></a></h5>
                        <p><%=comment.created_at%></p>
                    </div>
                    <div class="comment-body">
                        <p><%= comment.body%></p>
                    </div>
                    <div class="reply">
                        <p><span><a href="#"><i class="fa fa-thumbs-up" aria-hidden="true"></i></a>12</span><span><a href="#"><i class="fa fa-reply" aria-hidden="true"></i></a>7</span></p>
                            <div class="form-comment">
                        <%= render partial: 'comments/form'%>
                    </div>
                    </div>
                    
                </section>
            </article>
        
            <%# <%= render partial: "comments/reply"%>
        <%end%>
        </li>
        
    

</div>