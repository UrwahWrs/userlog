  <%= form_with url: blogpost_comments_path(@blogpost.id), method: :post do |form| %>
  <%= form.hidden_field :blogpost_id, value: @blogpost.id %>
    <% if @comment&.errors&.any? %>
    <div class="alert alert-danger">
    <% @comment.errors.full_messages.each do |message|%>
        <div>
            <%= message%>
        </div>
    <%end%>
    </div>
    <%end%>
  <p>
   <div class="mb-3 row">
    <div class="col-sm-10">
     <%= form.text_area "comment[body]",  class: "form-control", required: true  %>
    </div>
  </div>
    
  </p>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <div class="d-grid">
  
      <%= form.submit "Post Comment", class: "btn btn-secondary"%>
    </div>
  </div>



<% end %>